
<h1><%= event.name %></h1>
<p>Date: <%= event.date %></p>
<p>Capacity: <%= event.capacity %></p>
<p>City: <%= event.city %></p>
<%= link_to 'Single Event View', event_path(event) %> |
<%= link_to 'Edit Event', edit_event_path(event) %> |
<%= link_to 'Delete Event', event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete the event '#{event.name}'? This cannot be undone!"} %>
